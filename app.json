{
	"name": "Abu-MD",
	"description": " Whatsapp bot.",
	"keywords": [
		"whatsapp",
		"bot",
                "multi-divice"
	],
	"repository": "https://github.com/Afx-Abu/Abu-MD",
	"stack": "container",
	"env": {
       "SESSION_ID": {
            "description": "Your session id",
            "required": true       
        },
       "HEROKU_API_KEY": {
            "description": "For updating bot and setting vars remotely",
            "required": true,
            "value":""
        },
        "U_STATUS": {
            "description": "For updating  profileStatus by using bot",
            "required": false,
            "value":"true"
        },
        "WORKTYPE": {
            "description": "bot mode",
            "required": false,
            "value":"public"
        },
        "HEROKU_APP_NAME": {
            "description": "Exact name which you gave at the top",
            "required": true,
            "value":""
        }
	},
	"addons": [
		{
			"plan": "heroku-postgresql"
		}
                ]
}
